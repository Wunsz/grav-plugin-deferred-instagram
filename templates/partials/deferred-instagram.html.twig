{% set tagId = 'deferred-instagram-' ~ random() %}
<div id="{{ tagId }}">
    ...
</div>
<script>
    (function () {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '/deferred-instagram/fetch');
        xhr.onload = function() {
            if (xhr.status === 200) {
                document.getElementById('{{ tagId }}').innerHTML = xhr.responseText;
            } else {
                console.error('Request failed.  Returned status of ' + xhr.status);
            }
        };
        xhr.send();
    })();
</script>